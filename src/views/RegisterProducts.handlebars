<div class="product-edit-container">
    <h1 class="title">Registrar Producto</h1>
    
    <form class="product-edit-form" id="productForm">
        <!-- Título del Producto -->
        <div class="form-group">
            <label for="product-title">Título del Producto:</label>
            <input type="text" name="title" placeholder="Ingrese el título del producto" required>
        </div>

        <!-- Descripción -->
        <div class="form-group">
            <label for="product-description">Descripción:</label>
            <textarea name="description" placeholder="Ingrese la descripción del producto" required></textarea>
        </div>

        <!-- Código del Producto -->
        <div class="form-group">
            <label for="product-code">Código del Producto:</label>
            <input type="text" name="code" placeholder="Ingrese el código del producto" required>
        </div>

        <!-- Precio -->
        <div class="form-group">
            <label for="product-price">Precio:</label>
            <input type="number" name="price" placeholder="Ingrese el precio del producto" step="0.01" required>
        </div>

        <!-- Stock -->
        <div class="form-group">
            <label for="product-stock">Stock:</label>
            <input type="number" name="stock" placeholder="Ingrese la cantidad en stock" min="0" required>
        </div>

        <!-- Categoría -->
        <div class="form-group">
            <label for="product-category">Categoría:</label>
            <input type="text" name="category" placeholder="Ingrese la categoría del producto" required>
        </div>

        <!-- Miniaturas (Carga de Archivos) -->
        <div class="form-group">
            <label for="product-thumbnails">Miniaturas del Producto:</label>
            <input type="file" name="thumbnails" accept="image/*" multiple>
        </div>

        <!-- Botones de Guardar y Cancelar -->
        <div class="form-buttons">
            <button type="submit" class="save-button">Crear Producto</button>
            <button type="button" class="cancel-button" onclick="window.location.href='/'">Cancelar</button>
        </div>
    </form>
    
    <!-- Enlace para redirigir al catálogo de productos -->
    <div class="catalog-link">
        <a href="/products" class="catalog-button">Volver al Catálogo de Productos</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/productRegister.js"></script>
